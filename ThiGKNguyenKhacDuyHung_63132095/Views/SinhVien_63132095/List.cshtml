@model IEnumerable<ThiGKNguyenKhacDuyHung_63132095.Models.Sach>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center;">DANH SÁCH CÁC LOẠI SÁCH</h2>
<hr />
<br />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Mã sách
            </th>
            <th>
                Tên sách
            </th>
            <th>
                Ngày xuất bản
            </th>
            <th>
                Nhà xuất bản
            </th>
            <th>
                Ảnh bìa
            </th>
            <th>
                Mã loại sách
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.masach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tensach)
                </td>
                <td>
                    @(item.ngayxuatban.ToString("dd'/'MM'/'yyyy"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nhaxuatban)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.anhbia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Loaisach.maloaisach)
                </td>
                <td>
                    @Html.ActionLink("Xem chi tiết", "Details", new { id = item.masach })
                </td>
            </tr>
        }
    </tbody>

</table>


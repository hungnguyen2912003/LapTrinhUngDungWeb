@model ThiGKNguyenKhacDuyHung_63132095.Models.Sach

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NHẬP THÔNG TIN SINH VIÊN</h2>
<hr />
@using (Html.BeginForm("Create", "SinhVien_63132095", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="display: flex; padding-bottom: 20px;">
        <label class="control-label col-md-1">Mã sách</label>
        <div class="col-md-11">
            @Html.EditorFor(model => model.masach, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.masach, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="display: flex; padding-bottom: 20px;">
        <label class="control-label col-md-1">Tên sách</label>
        <div class="col-md-11">
            @Html.EditorFor(model => model.tensach, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tensach, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="display: flex; padding-bottom: 20px;">
        <label class="control-label col-md-1">Ngày xuất bản</label>
        <div class="col-md-11">
            @Html.TextBoxFor(model => model.ngayxuatban, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.ngayxuatban, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="display: flex; padding-bottom: 20px;">
        <label class="control-label col-md-1">Nhà xuất bản</label>
        <div class="col-md-11">
            @Html.EditorFor(model => model.nhaxuatban, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nhaxuatban, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="display: flex; padding-bottom: 20px;">
        <label class="control-label col-md-1">Ảnh sinh viên</label>
        <div class="col-md-11">
            <input type="file" name="ImgFile" class="form-control" />
            @Html.ValidationMessageFor(model => model.anhbia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="display: flex; padding-bottom: 20px;">
        <label class="control-label col-md-1">Mã loại sách</label>
        <div class="col-md-11">
            @Html.DropDownList("Maloaisach", (IEnumerable<SelectListItem>)ViewBag.SachList, "Chọn mã sách", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.maloaisach, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="display: flex; padding-bottom: 20px;">
        <label class="control-label col-md-1"></label>
        <div class="col-md-11">
            <input type="submit" value="Thêm mới" class="btn btn-light btn-outline-dark" />
        </div>
    </div>
</div>
}


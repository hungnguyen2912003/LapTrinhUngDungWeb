@model KT0720NguyenKhacDuyHung_63132095.Models.SINHVIEN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NHẬP THÔNG TIN SINH VIÊN</h2>
<hr />
@using (Html.BeginForm("Create", "SinhVien0720_63132095", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="display: flex; padding-bottom: 20px;">
            <label class="control-label col-md-1">Mã sinh viên</label>
            <div class="col-md-11">
                @Html.EditorFor(model => model.MaSV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaSV, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="display: flex; padding-bottom: 20px;">
            <label class="control-label col-md-1">Họ sinh viên</label>
            <div class="col-md-11">
                @Html.EditorFor(model => model.HoSV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HoSV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display: flex; padding-bottom: 20px;">
            <label class="control-label col-md-1">Tên sinh viên</label>
            <div class="col-md-11">
                @Html.EditorFor(model => model.TenSV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenSV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display: flex; padding-bottom: 20px;">
            <label class="control-label col-md-1">Ngày sinh</label>
            <div class="col-md-11">
                @Html.TextBoxFor(model => model.Ngsinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.Ngsinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display: flex; padding-bottom: 20px;">
            <label class="control-label col-md-1">Giới tính</label>
            <div class="col-md-11">
                <div class="checkbox">
                    <label>@Html.RadioButtonFor(model => model.Gioitinh, true) Nam</label>
                    <label>@Html.RadioButtonFor(model => model.Gioitinh, false) Nữ</label>
                </div>
            </div>
        </div>

        <div class="form-group" style="display: flex; padding-bottom: 20px;">
            <label class="control-label col-md-1">Ảnh sinh viên</label>
            <div class="col-md-11">
                <input type="file" name="ImgFile" class="form-control"/>
                @Html.ValidationMessageFor(model => model.AnhSV, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display: flex; padding-bottom: 20px;">
            <label class="control-label col-md-1">Địa chỉ</label>
            <div class="col-md-11">
                @Html.EditorFor(model => model.Dchi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dchi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display: flex; padding-bottom: 20px;">
            <label class="control-label col-md-1">Mã lớp</label>
            <div class="col-md-11">
                @Html.DropDownList("Malop", (IEnumerable<SelectListItem>)ViewBag.LopList, "Chọn mã lớp", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Malop, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display: flex; padding-bottom: 20px;">
            <label class="control-label col-md-1"></label>
            <div class="col-md-11">
                <input type="submit" value="Thêm mới" class="btn btn-light btn-outline-dark" />
            </div>
        </div>
    </div>
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Giao diện chính</title>
    <style>
        /* Phần trên cùng (Giao diện chính) */
        .header {
            background-color: #FFECE6;
            color: #9BD67A;
            text-align: center;
            padding: 20px;
        }

        /* Đường kẻ phân cách */
        .separator {
            border-top: 1px solid #ccc;
            margin: 20px 0;
        }

        /* Phần dưới với 3 button */

        .button-container {
            text-align: center;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 50vh; /* Adjust the height to your liking */
        }

            .button-container .btn {
                margin: 10px;
                padding: 20px 40px; /* Increase button size as needed */
            }

        body {
            background-image: url(/Public/img/background3.jpg);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>LỰA CHỌN NGƯỜI DÙNG</h1>
    </div>
    <div class="separator"></div>
    <div class="body">

        <div class="button-container">
            <button type="button" id="NhanvienButton" class="btn btn-primary btn-lg">NHÂN VIÊN</button>
            <button type="button" id="adminButton" class="btn btn-success btn-lg">CHỦ CỬA HÀNG</button>

        </div>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script>
        document.getElementById("NhanvienButton").addEventListener("click", function () {
          window.location.href = "@Url.Action("TimKiem", "TrangChu")";
        });

        document.getElementById("adminButton").addEventListener("click", function () {
          window.location.href = "@Url.Action("Index", "ThongKe")";
        });


    </script>
</body>
</html>
@model DatabaseFirst.Models.Phongban
@{
    ViewBag.Title = "Thêm phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm phòng ban</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <div class="form-group">
        <label class="control-label col-md-2">Mã phòng ban</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.maphong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.maphong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Tên phòng ban</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tenphong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tenphong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-success mt-2" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở lại", "Index")
</div>

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
}


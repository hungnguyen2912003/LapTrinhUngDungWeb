@model BTT6_Nhom9_63CNTT4.Models.Phongban
@{
    ViewBag.Title = "Chỉnh sửa thông tin phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa phòng ban</h2>

@using (Html.BeginForm("Edit", "Phongban", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Maphong)

        <div class="form-group">
            <label class="control-label col-md-2">Tên phòng ban</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tenphong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tenphong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật mới" class="btn btn-success mt-2" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại", "Index")
</div>

@section Scripts {
